<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Theme" parent="@android:style/Theme"></style>
    
    <style name="Theme.Tabhost">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextView"></style>

    <style name="TextView.Small">
        <item name="android:textSize">15dip</item>
    </style>

    <style name="TextView.Small.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Small.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextView.Middle">
        <item name="android:textSize">18dip</item>
    </style>

    <style name="TextView.Middle.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Middle.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>